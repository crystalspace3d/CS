SubDir TOP plugins cscript pyiengine ;

if $(PYTHON.AVAILABLE) = "yes"
{
  #--------
  # Swig-generated files for iengine.
  #--------
  local common = cs_iengine.cpp ;
  local ienginepy = [ DoSourceGrist iengine.py ] ;
  MakeLocate $(ienginepy) : $(LOCATE.TARGETS) ;

  if ! [ Property build : projgen ]
  {
    common = [ DoSourceGrist $(common) ] ;

    if $(CMD.SWIG)
    {
      Swig $(common) $(ienginepy) :
        [ DoSourceGrist iengine.i ] :
        python :
	-c++ -shadow :
	[ ConcatDirs $(TOP) include ]
	[ ConcatDirs $(BUILDTOP) include ] :
	[ ConcatDirs $(TOP) include bindings ]
	[ ConcatDirs $(TOP) include bindings python ] :
	$(SEARCH_SOURCE) [ ConcatDirs $(TOP) scripts python ] :
	iengine :
	[ on $(ienginepy) GetVar LOCATE ] ;
      Depends ienginepyclean : pythonswigclean ;
    }
    else
    {
      SEARCH on $(common) = $(SEARCH_SOURCE) ;
      local frozenpy = $(ienginepy:G=frozenienginepy) ;
      SEARCH on $(frozenpy) = [ ConcatDirs $(TOP) scripts python ] ;
      Copy $(ienginepy) : $(frozenpy) ;
      Depends $(ienginepy) : $(frozenpy) ;
    }
  }
  Clean ienginepyclean : $(ienginepy) ;
  Depends clean : ienginepyclean ;

  rule InstallCSCeguiPY
  {
    # Temporary SUBDIR override for InstallData.
    local SUBDIR = [ on $(<) GetVar LOCATE ] ;
    InstallData $(<) : $(>) ;
  }
  InstallCSCeguiPY $(ienginepy) : bindings python ;


  #--------
  # iengine -- Pure Python module
  #--------
  PythMod ienginemod : _iengine : 
	ienginemod.cpp cs_iengine.cpp : 
	crystalspace_python : 
	: 
	"iengine cs Python module" ;
  Depends ienginemod : $(ienginepy) ;
  #CFlags ienginemod : $(COMPILER.C++FLAGS.EXCEPTIONS.ENABLE) ;
}
