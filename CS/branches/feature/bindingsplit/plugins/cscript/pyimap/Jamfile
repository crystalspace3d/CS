SubDir TOP plugins cscript pyimap ;

if $(PYTHON.AVAILABLE) = "yes"
{
  #--------
  # Swig-generated files for imap.
  #--------
  local common = cs_imap.cpp ;
  local imappy = [ DoSourceGrist imap.py ] ;
  MakeLocate $(imappy) : $(LOCATE.TARGETS) ;

  if ! [ Property build : projgen ]
  {
    common = [ DoSourceGrist $(common) ] ;

    if $(CMD.SWIG)
    {
      Swig $(common) $(imappy) :
        [ DoSourceGrist imap.i ] :
        python :
	-c++ -shadow :
	[ ConcatDirs $(TOP) include ]
	[ ConcatDirs $(BUILDTOP) include ] :
	[ ConcatDirs $(TOP) include bindings ]
	[ ConcatDirs $(TOP) include bindings python ] :
	$(SEARCH_SOURCE) [ ConcatDirs $(TOP) scripts python ] :
	imap :
	[ on $(imappy) GetVar LOCATE ] ;
      Depends imappyclean : pythonswigclean ;
    }
    else
    {
      SEARCH on $(common) = $(SEARCH_SOURCE) ;
      local frozenpy = $(imappy:G=frozenimappy) ;
      SEARCH on $(frozenpy) = [ ConcatDirs $(TOP) scripts python ] ;
      Copy $(imappy) : $(frozenpy) ;
      Depends $(imappy) : $(frozenpy) ;
    }
  }
  Clean imappyclean : $(imappy) ;
  Depends clean : imappyclean ;

  rule InstallCSCeguiPY
  {
    # Temporary SUBDIR override for InstallData.
    local SUBDIR = [ on $(<) GetVar LOCATE ] ;
    InstallData $(<) : $(>) ;
  }
  InstallCSCeguiPY $(imappy) : bindings python ;


  #--------
  # imap -- Pure Python module
  #--------
  if $(CEGUI.AVAILABLE) = "yes"
  {
  PythMod imapmod : _imap : 
	imapmod.cpp cs_imap.cpp : 
	crystalspace_python : 
	: 
	"cegui cs Python module" ;
  Depends imapmod : $(imappy) ;
  #CFlags imapmod : $(COMPILER.C++FLAGS.EXCEPTIONS.ENABLE) ;
  }
}
