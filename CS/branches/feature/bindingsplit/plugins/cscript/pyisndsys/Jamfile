SubDir TOP plugins cscript pyisndsys ;

if $(PYTHON.AVAILABLE) = "yes"
{
  #--------
  # Swig-generated files for isndsys.
  #--------
  local common = cs_isndsys.cpp ;
  local isndsyspy = [ DoSourceGrist isndsys.py ] ;
  MakeLocate $(isndsyspy) : $(LOCATE.TARGETS) ;

  if ! [ Property build : projgen ]
  {
    common = [ DoSourceGrist $(common) ] ;

    if $(CMD.SWIG)
    {
      Swig $(common) $(isndsyspy) :
        [ DoSourceGrist isndsys.i ] :
        python :
	-c++ -shadow :
	[ ConcatDirs $(TOP) include ]
	[ ConcatDirs $(BUILDTOP) include ] :
	[ ConcatDirs $(TOP) include bindings ]
	[ ConcatDirs $(TOP) include bindings python ] :
	$(SEARCH_SOURCE) [ ConcatDirs $(TOP) scripts python ] :
	isndsys :
	[ on $(isndsyspy) GetVar LOCATE ] ;
      Depends isndsyspyclean : pythonswigclean ;
    }
    else
    {
      SEARCH on $(common) = $(SEARCH_SOURCE) ;
      local frozenpy = $(isndsyspy:G=frozenisndsyspy) ;
      SEARCH on $(frozenpy) = [ ConcatDirs $(TOP) scripts python ] ;
      Copy $(isndsyspy) : $(frozenpy) ;
      Depends $(isndsyspy) : $(frozenpy) ;
    }
  }
  Clean isndsyspyclean : $(isndsyspy) ;
  Depends clean : isndsyspyclean ;

  rule InstallCSCeguiPY
  {
    # Temporary SUBDIR override for InstallData.
    local SUBDIR = [ on $(<) GetVar LOCATE ] ;
    InstallData $(<) : $(>) ;
  }
  InstallCSCeguiPY $(isndsyspy) : bindings python ;


  #--------
  # isndsys -- Pure Python module
  #--------
  PythMod isndsysmod : _isndsys : 
	isndsysmod.cpp cs_isndsys.cpp : 
	crystalspace_python : 
	: 
	"isndsys cs Python module" ;
  Depends isndsysmod : $(isndsyspy) ;
  CFlags isndsysmod : $(COMPILER.C++FLAGS.EXCEPTIONS.ENABLE) ;
}
