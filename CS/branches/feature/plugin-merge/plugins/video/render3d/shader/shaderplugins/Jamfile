if $(GL.AVAILABLE) = "yes"
{
Description glshader : "OpenGL shaders" ;
Plugin glshader :
	[ Wildcard glshader_arb : *.cpp *.h ]
	[ Wildcard glshader_fixed : *.cpp *.h ]
	[ Wildcard glshader_ps1 : *.cpp *.h ]
	;
LinkWith glshader : crystalspace ;
ExternalLibs glshader : GL ;
CompileGroups glshader_arb : shaders renderers renderall openglrenderer ;
}
