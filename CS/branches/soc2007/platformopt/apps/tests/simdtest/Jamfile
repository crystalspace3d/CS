SubDir TOP apps tests simdtest ;

Description simdtest : "SIMD Test" ;
Application simdtest : [ Wildcard *.cpp *.h ] : console ;
if $(COMPILER.CFLAGS.SSE)
{
C++FLAGS on [ DoObjectGrist simdtestAVSSE$(SUFOBJ) ] += $(COMPILER.CFLAGS.SSE) ;
}
else if $(COMPILER.CFLAGS.ALTIVEC)
{
C++FLAGS on [ DoObjectGrist simdtestAVSSE$(SUFOBJ) ] += $(COMPILER.CFLAGS.ALTIVEC) ;
}
LinkWith simdtest : crystalspace ;
