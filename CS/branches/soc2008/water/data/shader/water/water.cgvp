//---------------------------------------------------------------------------------
//Input
//---------------------------------------------------------------------------------

struct INPUT
{
	float4 Position  : POSITION;   
	float4 Normal    : NORMAL;
};

//---------------------------------------------------------------------------------
//Output
//---------------------------------------------------------------------------------

struct OUTPUT
{
	float4 Position    : POSITION;
};

//---------------------------------------------------------------------------------
//Shader entry
//---------------------------------------------------------------------------------

OUTPUT main (INPUT IN, 
             uniform float4x4 ModelViewProj : state.matrix.mvp)
{
    OUTPUT OUT;

    //----------------------------------------------------------------------
    //Static constants
    //----------------------------------------------------------------------    
            float lengthdiv	= 0.01;
            float lod   	= 10;
    //----------------------------------------------------------------------

    float4 Pos        = IN.Position;
    Pos.y += Pos.x;

    OUT.Position = mul (ModelViewProj, Pos);

    return OUT;
    
}

