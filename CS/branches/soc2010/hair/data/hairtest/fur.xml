<?xml version='1.0' encoding='UTF-8'?>
<library>
  <shaders>
    <shader>
      <file>/shader/fur/fur_cg.xml</file>
    </shader>
    <shader>
      <file>/shader/fur/marschner_naludemo_cg.xml</file>
    </shader>	
    <shader>
      <file>/shader/fur/marschner_cg.xml</file>
    </shader>	
    <shader>
      <file>/shader/fur/kajiya_kay_cg.xml</file>
    </shader>	
    <shader>
      <file>/shader/fur/phong_cg.xml</file>
    </shader>		
  </shaders>
  <textures>
    <texture name='lookup1'>
      <file>/hairtest/lookup1.png</file>
    </texture>
    <texture name='lookup2'>
      <file>/hairtest/lookup2.png</file>
    </texture>
  </textures>
  <materials>
    <material name='fur_material'>
      <shader type='standard'>phong_cg</shader>
	  
	  <shadervar type="float" name="width">0.005</shadervar>
	  <shadervar type="float" name="density">5</shadervar>
	  <shadervar type="float" name="displaceEps">0.02</shadervar>
	  
      <shadervar type="texture" name="tex lookup1">lookup1</shadervar>
      <shadervar type="texture" name="tex lookup2">lookup2</shadervar>
	  <shadervar type="vector3" name="objEyePos">0,0,0</shadervar>
	  
<!-- Uncomment the following line for red hair -->	  
<!--	  
	  <shadervar type="vector3" name="mat furcolor">1,0,0</shadervar>
-->	  
    </material>
  </materials>
  <sounds/>
</library>
