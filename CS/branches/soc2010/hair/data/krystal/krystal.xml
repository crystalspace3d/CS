<?xml version='1.0' encoding='UTF-8'?>
<library>
  <plugins>
    <plugin name='skeletonfact'>crystalspace.mesh.loader.factory.skeleton</plugin>
    <plugin name='animeshfact'>crystalspace.mesh.loader.factory.animesh</plugin>
  </plugins>
  <shaders>
    <shader>
      <file>/shader/fur/diffuse_cg.xml</file>
    </shader>
	<shader>
      <file>/shader/fur/marschner_lookup_cg.xml</file>
    </shader>
  </shaders>
  <textures>
    <texture name='krystal_body_h'>
      <file>/lib/krystal/krystal_body_h.png</file>
    </texture>
    <texture name='krystal_spec'>
      <file>/lib/krystal/krystal_body_spec.png</file>
    </texture>
    <texture name='krystal_skull'>
      <file>/lib/krystal/krystal_skull.png</file>
    </texture>
    <texture name='krystal_skull_densitymap'>
      <file>/lib/krystal/krystal_skull_densitymap.png</file>
    </texture>	
    <texture name='krystal_skull_heightmap'>
      <file>/lib/krystal/krystal_skull_heightmap.png</file>
    </texture>		
  </textures>
  <materials>
    <material name='krystal_material'>
      <texture>krystal_body_h</texture>
      <shadervar type="texture" name="tex specular">krystal_spec</shadervar>
<!-- 	
	  <shader type='standard'>diffuse_cg</shader>	
      <shadervar type="texture" name="tex diffuse">krystal_body_h</shadervar>
-->	  		
    </material>
    <material name='skull_material'>
      <texture>krystal_skull</texture>
<!-- 	
	  <shader type='standard'>diffuse_cg</shader>	
      <shadervar type="texture" name="tex diffuse">krystal_skull_densitymap</shadervar>	  	  
-->	  	
	  <shadervar type="float" name="width">0.0015</shadervar>
	  <shadervar type="float" name="displaceDistance">0.02</shadervar>
	  <shadervar type="texture" name="density map">krystal_skull_densitymap</shadervar>
	  <shadervar type="float" name="densityFactor">20</shadervar>
      <shadervar type="texture" name="height map">krystal_skull_heightmap</shadervar>
	  <shadervar type="float" name="heightFactor">0.5</shadervar>
	  <shadervar type="float" name="controlPointsDistance">0.05</shadervar>
	  <shadervar type="int" name="strictHeightmap">0</shadervar>
    </material>
  </materials>
  <sounds/>
  <library>/lib/krystal/skelkrystal_rig</library>
  <library>/lib/krystal/krystal</library>
</library>
