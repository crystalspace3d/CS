<!--
  Based on the paper "Approximating Dynamic Global Illumination in 
  Image Space" by Tobias Ritschel, Thorsten Grosch and Hans-Peter 
  Seidel, 2009.
-->

<shader compiler="xmlshader" name="deferred_downsample">
    
  <technique priority="200">
    <pass>
      <!-- no blending -->
      <mixmode>
        <blendop src="one" dst="zero" />
        <alphatest>disable</alphatest>
      </mixmode>	
      
      <vp plugin="glcg" file="/shader/deferred/globalillum.cgvp" /> 
      
      <texture destination="NormalDepthBuffer" name="tex gbuffer 3" />      
      <fp plugin="glcg">
        <cgfp>          
          <variablemap variable="viewport size" destination="ViewportSize" />          
          <variablemap variable="downsample depth threshold" destination="DepthThreshold" />             
          <program>
            <?Include downsample.cginc ?>
          </program>
        </cgfp>
      </fp>
    </pass>
  </technique>

</shader>
