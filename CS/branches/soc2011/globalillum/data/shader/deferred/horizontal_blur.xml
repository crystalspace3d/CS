<!--
  Based on the paper "Approximating Dynamic Global Illumination in 
  Image Space" by Tobias Ritschel, Thorsten Grosch and Hans-Peter 
  Seidel, 2009.
-->

<shader compiler="xmlshader" name="deferred_horizontal_blur">
  
  <shadervars>
    
  </shadervars>
  
  <technique priority="200">
    <pass>
      <!-- no blending -->
      <mixmode>
        <blendop src="one" dst="zero" />
        <alphatest>disable</alphatest>
      </mixmode>	
      
      <vp plugin="glcg" file="/shader/deferred/globalillum.cgvp" />      
      
      <texture destination="GlobalIllumBuffer" name="tex global illumination" />
      <texture destination="NormalBuffer" name="tex gbuffer 3" />
      <texture destination="DepthBuffer" name="tex gbuffer depth" />
      <!--<fp plugin="glcg" file="/shader/deferred/horizontal_blur.cgfp" />-->
      <fp plugin="glcg">
        <cgfp>
          <variablemap variable="projection transform inverse" destination="ProjInv" />
          <variablemap variable="far clip distance" destination="FarClipDistance" />
          <variablemap variable="inv viewport size" destination="InvViewportSize" />
          <variablemap variable="ssao blur kernelsize" destination="KernelSize" />
          <variablemap variable="ssao blur position threshold" destination="PositionThreshold" />
          <variablemap variable="ssao blur normal threshold" destination="NormalThreshold" />
          <variablemap name="Direction" destination="Direction" type="vector2">1,0</variablemap>          
          <program>          
            <?Include blur.cginc ?>          
          </program>
        </cgfp>
      </fp>
    </pass>
  </technique>

</shader>
