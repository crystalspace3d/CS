SubDir TOP plugins video canvas macosx coregraphics ;

if $(TARGET.OS) = "MACOS_X" 
{
Help cgdriver2d : "Crystal Space MacOS/X CoreGraphics 2D driver" ;

Plugin cgdriver2d
	: [ Wildcard *.c *.cpp *.C *.m *.mm *.M *.h ]
;
LinkWith cgdriver2d : canvascommon osxcanvascommon csutil ;

CompileGroups cgdriver2d :  drivers2d ;
CompileGroups cgdriver2d :  softcanvas ;

}

