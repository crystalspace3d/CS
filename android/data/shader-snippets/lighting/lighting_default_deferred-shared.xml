<snippet type="compound">
  <technique priority="200">
    <combiner plugin="crystalspace.graphics3d.shader.combiner.glcg" />

    <alias name="use_buffer" weak="yes" file="/shader-snippets/deferred/use_gbuffer.xml" />
    <alias name="apply_alpha_end" weak="yes" file="/shader-snippets/surface/alpha-nochange.xml" />

    <snippet id="position" file="/shader-snippets/position.xml" />
    <snippet id="use_buffer" filealias="use_buffer" />
    <snippet id="add" file="/shader-snippets/add.xml" />
    <snippet id="apply_lighting" file="/shader-snippets/deferred/apply-lighting.xml" />
    <snippet id="sectorfog" file="/shader-snippets/fog/fog-sector.xml" />
    <snippet id="apply_alpha_end" filealias="apply_alpha_end" />
    <snippet id="hdrscale" file="/shader-snippets/hdr-postscale.xml" />

    <connection from="position" to="use_buffer" />
    <connection from="use_buffer" to="apply_lighting">
      <explicit from="diffuse" to="surfaceDiffuse" />
      <explicit from="specular" to="surfaceSpecular" />
    </connection>
    <connection from="apply_lighting" to="add">
      <explicit from="result" to="a" />
    </connection>
    <connection from="use_buffer" to="add">
      <explicit from="glow" to="b" />
    </connection>
    <connection from="add" to="apply_alpha_end" />
    <connection from="apply_alpha_end" to="sectorfog" />
    <connection from="sectorfog" to="hdrscale" />
  </technique>
</snippet>
