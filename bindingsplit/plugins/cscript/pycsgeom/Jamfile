SubDir TOP plugins cscript pycsgeom ;

if $(PYTHON.AVAILABLE) = "yes"
{
  #--------
  # Swig-generated files for csgeom.
  #--------
  local common = cs_csgeom.cpp ;
  local csgeompy = [ DoSourceGrist csgeom.py ] ;
  MakeLocate $(csgeompy) : $(LOCATE.TARGETS) ;

  if ! [ Property build : projgen ]
  {
    common = [ DoSourceGrist $(common) ] ;

    if $(CMD.SWIG)
    {
      Swig $(common) $(csgeompy) :
        [ DoSourceGrist csgeom.i ] :
        python :
	-c++ -shadow :
	[ ConcatDirs $(TOP) include ]
	[ ConcatDirs $(BUILDTOP) include ] :
	[ ConcatDirs $(TOP) include bindings ]
	[ ConcatDirs $(TOP) include bindings python ] :
	$(SEARCH_SOURCE) [ ConcatDirs $(TOP) scripts python ] :
	csgeom :
	[ on $(csgeompy) GetVar LOCATE ] ;
      Depends csgeompyclean : pythonswigclean ;
    }
    else
    {
      SEARCH on $(common) = $(SEARCH_SOURCE) ;
      local frozenpy = $(csgeompy:G=frozencsgeompy) ;
      SEARCH on $(frozenpy) = [ ConcatDirs $(TOP) scripts python ] ;
      Copy $(csgeompy) : $(frozenpy) ;
      Depends $(csgeompy) : $(frozenpy) ;
    }
  }
  Clean csgeompyclean : $(csgeompy) ;
  Depends clean : csgeompyclean ;

  rule InstallCSCeguiPY
  {
    # Temporary SUBDIR override for InstallData.
    local SUBDIR = [ on $(<) GetVar LOCATE ] ;
    InstallData $(<) : $(>) ;
  }
  InstallCSCeguiPY $(csgeompy) : bindings python ;


  #--------
  # csgeom -- Pure Python module
  #--------
  PythMod csgeommod : _csgeom : 
	csgeommod.cpp cs_csgeom.cpp : 
	crystalspace : 
	: 
	"csgeom cs Python module" ;
  Depends csgeommod : $(csgeompy) ;
  CFlags csgeommod : $(COMPILER.C++FLAGS.STRICTALIASING.DISABLE) ;
}
