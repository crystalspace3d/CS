<!-- NAnt build file for Crystal Space based on the java ant build by Rene Jager-->

<project name="Crystal Space Sharp" default="build" basedir=".">
    <!--Properties-->
    <property name="description" value="Crystal Space C# bindings" />
    <property name="debug" value="true" />
    <property name="name" value="CrystalSpace" />	
    <property name="version" value="0.1" />

    <property name="src.basedir" value="." />
    <property name="lib.dir" value="." />
    <property name="cspacesharp.out" value="crystalspace-sharp.dll" />

    <description>${description}</description>

    <target name="build" description="compiles crystal space sharp">
        <csc target="library" output="${cspacesharp.out}" debug="${debug}">
            <sources>
                <include name="${src.basedir}/cspacesharp/*.cs" />
            </sources>
        </csc>
    </target>

    <target name="rebuild" description="Rebuild" depends="cleanBuild,build" />
    <target name="clean" description="Clean up" depends="cleanBuild" />

    <target name="cleanBuild">
	<delete file="${cspacesharp.out}" />
    </target>
</project>
