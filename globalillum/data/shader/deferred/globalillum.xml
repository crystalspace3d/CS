<!--
  Based on the paper "Approximating Dynamic Global Illumination in 
  Image Space" by Tobias Ritschel, Thorsten Grosch and Hans-Peter 
  Seidel, 2009.
-->

<shader compiler="xmlshader" name="deferred_globalillum">
  
  <shadervars>
    <shadervar name="sample radius" type="float">50.0</shadervar>
    <shadervar name="sample count" type="int">16</shadervar>
    <shadervar name="pattern size" type="int">4</shadervar>
    <shadervar name="depth bias" type="float">1.0</shadervar>
    <shadervar name="occlusion strength" type="float">4.0</shadervar>
    <shadervar name="max occluder distance" type="float">50.0</shadervar>
    <shadervar name="light rotation angle" type="float">30.0</shadervar>
  </shadervars>
  
  <technique priority="200">
    <pass>
      <!-- no blending -->
      <mixmode>
        <blendop src="one" dst="zero" />
        <alphatest>disable</alphatest>
      </mixmode>
	
      <!-- We use deferred_point_light vertex shader here because it
           does exactly what we need -->
      <vp plugin="glcg" file="/shader/deferred/globalillum.cgvp" />

      <!-- *si SSDO se renderea antes de las luces, el DirectRadianceBuffer deberia ser el gbuffer diffuse -->
      <texture destination="DirectRadianceBuffer" name="tex gbuffer 0" />
      <texture destination="NormalBuffer" name="tex gbuffer 3" />
      <texture destination="DepthBuffer" name="tex gbuffer depth" />
      <texture destination="SeedTexture" name="tex sample directions" />
      <texture destination="EnvmapTexture" name="tex globalillum envmap" />
      <texture destination="RandNormalsTexture" name="tex random normals" />
      <fp plugin="glcg" file="/shader/deferred/globalillum.cgfp" />

    </pass>
  </technique>

</shader>
