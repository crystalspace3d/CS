<!--
  Based on the paper "Approximating Dynamic Global Illumination in 
  Image Space" by Tobias Ritschel, Thorsten Grosch and Hans-Peter 
  Seidel, 2009.
-->

<shader compiler="xmlshader" name="deferred_globalillum"> 
  
  <technique priority="200">
    <pass>
      <!-- no blending -->
      <mixmode>
        <blendop src="one" dst="zero" />
        <alphatest>disable</alphatest>
      </mixmode>	
      
      <vp plugin="glcg" file="/shader/deferred/globalillum.cgvp" />
      
      <texture destination="DirectRadianceBuffer" name="tex direct radiance" />
      <texture destination="DiffuseBuffer" name="tex gbuffer 0" />
      <texture destination="AmbientBuffer" name="tex gbuffer 2" />
      <!--texture destination="NormalBuffer" name="tex gbuffer 3" /-->
      <texture destination="NormalBuffer" name="tex normals depth" />
      <texture destination="SeedTexture" name="tex sample directions" />
      <texture destination="EnvmapTexture" name="tex globalillum envmap" />
      <texture destination="RandNormalsTexture" name="tex random normals" />      
      <fp plugin="glcg">
        <cgfp>
          <?Include ssao.cginc ?>
        </cgfp>
      </fp>

    </pass>
  </technique>

</shader>
