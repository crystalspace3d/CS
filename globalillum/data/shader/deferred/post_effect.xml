<shader compiler="xmlshader" name="deferred_post_effect" lights="0">

  <technique priority="200" lights="0">
    <pass>
      
	  <!-- no blending -->
      <mixmode>
        <blendop src="one" dst="zero" />
        <alphatest>disable</alphatest>
      </mixmode>
	  
	  <buffer source="texture coordinate 0" destination="texture coordinate 0" />
      <vp plugin="glcg" file="/shader/deferred/post_effect.cgvp" />

	  <texture destination="ScreenTexture" name="tex buffer color" />
	  <texture destination="DiffuseTexture" name="tex gbuffer 0" />
	  <texture destination="NormalTexture" name="tex gbuffer 1" />
	  <texture destination="AmbientTexture" name="tex gbuffer 2" />
      <texture destination="DepthTexture" name="tex gbuffer depth" />
      <fp plugin="glcg" file="/shader/deferred/post_effect.cgfp" />

    </pass>
  </technique>

</shader>
