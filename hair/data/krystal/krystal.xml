<?xml version='1.0' encoding='UTF-8'?>
<library>
  <plugins>
    <plugin name='skeletonfact'>crystalspace.mesh.loader.factory.skeleton</plugin>
    <plugin name='animeshfact'>crystalspace.mesh.loader.factory.animesh</plugin>
  </plugins>
  <shaders>
    <shader>
      <file>/shader/fur/kajiya_kay_cg.xml</file>
    </shader>
  </shaders>
  <textures>
    <texture name='krystal_body_h'>
      <file>/lib/krystal/krystal_body_h.png</file>
    </texture>
    <texture name='krystal_spec'>
      <file>/lib/krystal/krystal_body_spec.png</file>
    </texture>
    <texture name='krystal_hairs.png'>
      <file>/lib/krystal/krystal_hairs.png</file>
    </texture>
    <texture name='lookup1'>
      <file>/hairtest/lookup1.png</file>
    </texture>
    <texture name='lookup2'>
      <file>/hairtest/lookup2.png</file>
    </texture>	
  </textures>
  <materials>
    <material name='krystal_material'>
<!-- Uncomment the following line for red hair -->	  
<!--		
	  <shader type='standard'>kajiya_kay_cg</shader>
-->	  	  
	  <shadervar type="vector3" name="mat furcolor">1,1,0</shadervar>
      <shadervar type="texture" name="tex lookup1">lookup1</shadervar>
      <shadervar type="texture" name="tex lookup2">lookup2</shadervar>	  
      <texture>krystal_body_h</texture>
      <shadervar type="texture" name="tex specular">krystal_spec</shadervar>
    </material>
    <material name='skull_material'>
      <texture>krystal_body_h</texture>
      <shadervar type="texture" name="tex specular">krystal_spec</shadervar>
      <shadervar type="texture" name="density map">krystal_body_h</shadervar>
      <shadervar type="texture" name="height map">krystal_body_h</shadervar>
    </material>
  </materials>
  <sounds/>
  <library>/lib/krystal/skelkrystal_rig</library>
  <library>/lib/krystal/krystal</library>
</library>
